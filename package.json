{
  "name": "evergarden-font-manager",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "license": "MIT",
  "scripts": {
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "npm run build:electron && concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "icons": "electron-icon-builder -i assets/icon-1024.png -o build -f",
    "prebuild": "npm run icons",
    "build:electron": "tsup electron/main.ts electron/preload.ts --out-dir dist-electron --format cjs --external electron,better-sqlite3,fontkit,chokidar,electron-squirrel-startup --no-splitting --clean",
    "build": "npm run rebuild && npm run build:electron && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dist": "npm run build && electron-builder --win --publish never --config.directories.output=release/installer",
    "dist:portable": "npm run build && electron-builder --win portable --publish never --config.directories.output=release/portable"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "fontkit": "^2.0.4",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^1.8.10",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "description": "A modern, local font manager for creative professionals.",
  "author": {
    "name": "Manju Madhav V A",
    "email": "manjumadhav.va@gmail.com"
  },
  "build": {
    "appId": "com.evergarden.fontmanager",
    "productName": "Evergarden Font Manager",
    "publish": null,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/better-sqlite3/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.typography",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Graphics",
      "icon": "build/icon.png"
    }
  }
}
